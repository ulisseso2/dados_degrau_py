# .env-example
# Renomeie este arquivo para .env e preencha com as suas credenciais

# Credenciais do Google Analytics e Google Ads
GCP_SERVICE_ACCOUNT_FILE=gcp_credentials.json

# Credenciais do Google Ads
GOOGLE_ADS_CLIENT_ID=seu-client-id
GOOGLE_ADS_CLIENT_SECRET=sua-client-secret
GOOGLE_ADS_DEVELOPER_TOKEN=seu-developer-token
GOOGLE_ADS_REFRESH_TOKEN=seu-refresh-token
GOOGLE_ADS_LOGIN_CUSTOMER_ID=seu-mcc-id
GOOGLE_ADS_LINKED_CUSTOMER_ID=sua-customer-id

# Credenciais do Facebook/Meta
FB_APP_ID=seu-app-id
FB_APP_SECRET=seu-app-secret
FB_ACCESS_TOKEN=seu-token-de-longa-duracao
FB_AD_ACCOUNT_ID=act_12345678
FB_SHORT_LIVED_TOKEN=token-temporario-para-gerar-refresh-token

# Configurações de Banco de Dados (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=usuario
DB_PASSWORD=senha
DB_NAME=nome-do-banco
